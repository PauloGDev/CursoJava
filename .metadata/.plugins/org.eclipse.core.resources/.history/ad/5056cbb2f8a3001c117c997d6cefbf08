package Fundamentos;

import java.util.Scanner;

import javax.swing.JOptionPane;

public class Inferencia {

	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Digite o 1° Salário!");
		String salario1 = entrada.next().replace(",", ".");
		System.out.print("\nDigite o 2° Salário!");
		String salario2 = entrada.next().replace(",", ".");
		System.out.print("\nDigite o 3° Salário!");
		String salario3 = entrada.next().replace(",", ".");
		
		double s1 = Double.parseDouble(salario1);
		double s2 = Double.parseDouble(salario2);
		double s3 = Double.parseDouble(salario3);

		double soma = s1 + s2 + s3;
		double media = soma/3;
		
		System.out.println("Soma = " + soma);
		System.out.println("Media = " + media%.2f);
				
	}
}
